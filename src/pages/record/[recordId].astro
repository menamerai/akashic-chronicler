---
import Layout from "../../layouts/Layout.astro";
import NavBar from "../../components/NavBar.astro";
import Card from "../../components/Card.astro";
const param = Astro.params;

const response = await fetch("https://api.studio.thegraph.com/query/55572/akasha/version/latest", {
        method: "POST",
        headers: {
            "Content-Type": "application/json",
        },
        body: JSON.stringify({
            query: `
            query GetFlashCards {
                flashcardAddeds (where: { _recordId : "${param.recordId}" }) {
					id
					_from
					_question
					_answer
				}
            }
            `,
        })
});
const data = await response.json();
const flashcards = data.data.flashcardAddeds;
---

<Layout title="Akasha">
	<NavBar active="/" />
	<main class="p-16 flex flex-wrap justify-start items-center">
		{flashcards.map((flashcard) => {
			return (
				<Card title={flashcard._question} content={flashcard._answer} id={flashcard.id} />
			)
		})}
	</main>
</Layout>